<resources
    xmlns:tools="http://schemas.android.com/tools"
    >
    <!-- Base application theme. -->
    <style name="Theme.WePAWS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/maian</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Toolbar.Theme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="homeAsUpIndicator">@drawable/ic_nav_back</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Navigationbar.FontSize" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FontSize_Big" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="FontSize_Medium" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="FontSize_Small" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FontSize_Tiny" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HomeItem" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Button_Medium" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/orange_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Button_Small" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/orange_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Button_Tiny" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/orange_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!--        <item name="android:onClick">homeSearch</item>-->

    <style name="Home.FontSize" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Search.Component" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Search.Component.Switch" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Result.Display" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlActivated">@color/orange_dark</item>
    </style>

    <style name="Result.Detail.Title" parent="FontSize_Small">
        <item name="android:background">@color/orange_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Preference.FontSize" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">25sp</item>
    </style>

</resources>