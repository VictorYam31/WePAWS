<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/result_detail_3_view_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:paddingStart="15dp"
        android:theme="@style/FontSize_Small"
        android:text="@string/result_detail_view_all"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/result_detail_3_write_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Button_Tiny"
            android:text="@string/result_detail_write_review"
            />

    </LinearLayout>

</LinearLayout>