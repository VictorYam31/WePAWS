<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/home_item_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:theme="@style/HomeItem"
        >
        <ImageView
            android:id="@+id/home_item_image"
            android:src="@drawable/review_good"
            android:layout_centerHorizontal="true"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_darkorange"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/home_item_name"
            android:text="Name here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_item_image"
            android:textColor="@color/orange_dark"
            android:gravity="center"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>