<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/FontSize_Tiny"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:useDefaultMargins="true"
        android:numColumns="2">

        <ImageView
            android:id="@+id/result_detail_1_opening_hours_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/opening_hours"/>

        <TextView
            android:id="@+id/result_detail_1_opening_hours_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_gravity="center_vertical"
            android:text="Status here"/>

        <ImageView
            android:id="@+id/result_detail_1_phone_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:src="@drawable/phone_call"/>

        <TextView
            android:id="@+id/result_detail_1_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_gravity="center_vertical"
            android:text="@string/result_detail_phone"/>

        <ImageView
            android:id="@+id/result_detail_1_address_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:src="@drawable/address"/>

        <TextView
            android:id="@+id/result_detail_1_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_gravity="center_vertical"
            android:text="@string/result_detail_address"/>

    </GridLayout>

    <TextView
        android:id="@+id/result_detail_1_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Description here"/>

</LinearLayout>