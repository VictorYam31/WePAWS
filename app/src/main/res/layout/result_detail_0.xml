<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/result_detail_0_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:theme="@style/FontSize_Medium"
        android:text="Name here"
        />

    <TextView
        android:id="@+id/result_detail_0_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/FontSize_Big"
        android:drawableLeft="@drawable/review_star"
        android:drawableTint="@color/orange_dark"
        android:text="Rating here"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/result_detail_0_good"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/good"
                android:text="@string/result_detail_good"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/result_detail_0_good_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:tint="@color/good"
                android:src="@drawable/outline_sentiment_very_satisfied_24"
                />
            <TextView
                android:id="@+id/result_detail_0_good_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="0"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/result_detail_0_mediocre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/mediocre"
                android:text="@string/result_detail_mediocre"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/result_detail_0_mediocre_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:tint="@color/mediocre"
                android:src="@drawable/outline_sentiment_satisfied_24"
                />
            <TextView
                android:id="@+id/result_detail_0_mediocre_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="0"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/result_detail_0_bad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/bad"
                android:text="@string/result_detail_bad"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/result_detail_0_bad_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:tint="@color/bad"
                android:src="@drawable/outline_sentiment_dissatisfied_24"
                />
            <TextView
                android:id="@+id/result_detail_0_bad_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="0"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="40dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/result_detail_0_phone_call"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:tint="@color/orange_dark"
                android:src="@drawable/phone_call"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/result_detail_0_bookmark"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:tint="@color/orange_dark"
                android:src="@drawable/share"
                />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>