<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/result_detail_2_review_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:theme="@style/Result.Detail.Title"
            android:text="@string/result_detail_review_summary"
            />

        <TextView
            android:id="@+id/result_detail_2_view_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:theme="@style/Result.Detail.Title"
            android:text="@string/result_detail_view_all"
            android:visibility="gone"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:theme="@style/FontSize_Small"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/result_detail_2_good"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/good"
                android:text="@string/result_detail_good"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/result_detail_2_good_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:tint="@color/good"
                android:src="@drawable/outline_sentiment_very_satisfied_24"
                />
            <TextView
                android:id="@+id/result_detail_2_good_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="0"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/result_detail_2_mediocre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/mediocre"
                android:text="@string/result_detail_mediocre"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/result_detail_2_mediocre_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:tint="@color/mediocre"
                android:src="@drawable/outline_sentiment_satisfied_24"
                />
            <TextView
                android:id="@+id/result_detail_2_mediocre_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="0"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/result_detail_2_bad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/bad"
                android:text="@string/result_detail_bad"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/result_detail_2_bad_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:tint="@color/bad"
                android:src="@drawable/outline_sentiment_dissatisfied_24"
                />
            <TextView
                android:id="@+id/result_detail_2_bad_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="0"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>