<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/result_detail_2_review_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Result.Detail.Title"
        android:text="@string/result_detail_review_summary"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:theme="@style/FontSize_Medium">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/result_detail_2_good"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/good"
                android:text="@string/result_detail_good"
                />
            <ImageView
                android:id="@+id/result_detail_2_good_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:tint="@color/good"
                android:src="@drawable/review_good"
                />
            <TextView
                android:id="@+id/result_detail_2_good_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/result_detail_2_mediocre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/mediocre"
                android:text="@string/result_detail_mediocre"
                />
            <ImageView
                android:id="@+id/result_detail_2_mediocre_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:tint="@color/mediocre"
                android:src="@drawable/review_good"
                />
            <TextView
                android:id="@+id/result_detail_2_mediocre_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/result_detail_2_bad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/bad"
                android:text="@string/result_detail_bad"
                />
            <ImageView
                android:id="@+id/result_detail_2_bad_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:tint="@color/bad"
                android:src="@drawable/review_good"
                />
            <TextView
                android:id="@+id/result_detail_2_bad_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>