<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/review_display_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        app:tint="@color/good"
        android:src="@drawable/review_good"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:theme="@style/FontSize_Tiny">

        <TextView
            android:id="@+id/review_display_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/FontSize_Small"
            android:text="Comment here"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/review_display_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Username"
                />

            <ImageView
                android:id="@+id/review_display_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/review_display_username"
                android:scaleX="0.3"
                android:scaleY="0.3"
                android:src="@drawable/circle"/>

            <TextView
                android:id="@+id/review_display_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/review_display_circle"
                android:text="Date here"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>