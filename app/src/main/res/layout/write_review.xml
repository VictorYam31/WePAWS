<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteReviewFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/write_review_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:theme="@style/FontSize_Medium"
        android:text="@string/write_review_title"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/write_review_good_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:tint="@color/good"
            android:drawableTint="@color/orange_dark"
            android:drawableRight="@drawable/review_good"
            />

        <RadioButton
            android:id="@+id/write_review_mediocre_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:tint="@color/mediocre"
            />

        <RadioButton
            android:id="@+id/write_review_bad_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:tint="@color/bad"
            />

    </RadioGroup>

</LinearLayout>